{
  "entities": {
    "user": {
      "title": "User",
      "description": "A user of the application.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "The unique identifier for the user."
        },
        "name": {
          "type": "string",
          "description": "The name of the user."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The email of the user."
        }
      },
      "required": [
        "id",
        "name",
        "email"
      ]
    },
    "patient": {
      "title": "Patient",
      "description": "A patient of a doctor.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "The unique identifier for the patient."
        },
        "name": {
          "type": "string",
          "description": "The name of the patient."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The email of the patient."
        }
      },
      "required": [
        "id",
        "name",
        "email"
      ]
    },
    "video": {
      "title": "Video",
      "description": "A video exercise.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "The unique identifier for the video."
        },
        "title": {
          "type": "string",
          "description": "The title of the video."
        },
        "description": {
          "type": "string",
          "description": "The description of the video."
        }
      },
      "required": [
        "id",
        "title",
        "description"
      ]
    }
  },
  "auth": {
    "providers": [
      "password"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/backend/entities/user"
      },
      "description": "Stores user profiles."
    },
    "/patients/{patientId}": {
      "schema": {
        "$ref": "#/backend/entities/patient"
      },
      "description": "Stores patient data."
    },
    "/videos/{videoId}": {
      "schema": {
        "$ref": "#/backend/entities/video"
      },
      "description": "Stores video information."
    }
  }
}
